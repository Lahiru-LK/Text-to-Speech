{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "languages": {
        "python": {}
      },
      "phases": {
        "setup": {
          "nixPkgs": ["python311", "gcc"]
        },
        "install": {
          "cmds": [
            "pip install -r requirements.txt"
          ]
        },
        "start": {
          "cmds": [
            "gunicorn app:application"
          ]
        }
      }
    }
  }
}
